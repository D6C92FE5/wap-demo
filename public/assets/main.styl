
.hide
  display none

body, h1, h2, h3, h3, h5, h6, .h1, .h2, .h3, .h3, .h5, .h6
  font-family "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Microsoft YaHei", sans-serif

body
  background-color #fcfcfc

.sidebar
  position fixed
  top 0
  bottom 0
  left 0
  z-index 1000
  display none
  width 200px
  overflow-x hidden
  overflow-y auto
  text-align right
  color #b3b3b3
  background-color #343131
  .header
    padding 25px 30px 15px 0
    margin 0
    font-size 24px
    color #fcfcfc
    background-color #2980b9
  .nav
    margin-top 20px
    & > li
      & > a
        padding 10px 30px
        color #c7c7c7
        &:hover, &:focus
          background-color #4e4a4a
      &.active > a
        color #333
        background-color #fcfcfc
@media (min-width: 992px)
  .sidebar
    display block

.main
  padding 20px 15px
@media (min-width: 768px)
  .main
    padding-left 30px
    padding-right 30px
@media (min-width: 992px)
  .main
    margin-left 200px

.main h2
  margin-bottom 20px

.traffic-box
  position relative
  .floor-chooser
    position absolute
    top -33px
    right 0
    .dropdown-menu
      top 32px
      left auto
      right 0
      min-width 100px
  .map
    width 100%
    border 1px solid #ccc
    border-radius 4px
  .chart
    position absolute
    top 0
    z-index 10
    width 100%
    height 100%
    .point
      fill #e49290
