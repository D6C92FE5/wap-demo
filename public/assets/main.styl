
.hide
  display none

body, h1, h2, h3, h3, h5, h6, .h1, .h2, .h3, .h3, .h5, .h6
  font-family "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Microsoft YaHei", sans-serif

body
  background-color #fcfcfc

.sidebar
  position fixed
  top 0
  bottom 0
  left 0
  z-index 100
  display none
  width 200px
  overflow-x hidden
  overflow-y auto
  text-align right
  color #b3b3b3
  background-color #343131
  a
    text-decoration none
  .header
    padding 25px 30px 15px 0
    margin 0
    font-size 24px
    color #fcfcfc
    background-color #2980b9
  .nav
    margin-top 20px
    & > li
      & > a
        padding 10px 30px
        color #c7c7c7
        &:hover, &:focus
          background-color #4e4a4a
      &.active > a
        color #333
        background-color #fcfcfc
  .mask
    position fixed
    top 0
    left 200px
    height 100%
    width 100%
    background-color rgba(0,0,0,.4)
.sidebar-toggle
  position absolute
  z-index 110
  padding 5px 9px
  color #fcfcfc
  background-color #2980b9
  outline none
  border none
  border-bottom-right-radius 4px
@media (min-width: 992px)
  .sidebar
    display block
    .mask
      display none
  .sidebar-toggle
    display none


.main
  padding 20px 15px
@media (min-width: 768px)
  .main
    padding-left 30px
    padding-right 30px
@media (min-width: 992px)
  .main
    margin-left 200px

.main h2
  margin-bottom 20px

.chart-box
  position relative
  .floor-chooser
    position absolute
    top -33px
    right 0
    .dropdown-menu
      top 31px
      left auto
      right 0
      min-width 100px
  .box-main
    position relative
    overflow hidden
    border 1px solid #ccc
    border-radius 4px
    .map
      width 100%
    .chart
      position absolute
      top 0
      z-index 10
      width 100%
      height 100%
      .heatmap
        border-radius 3px
        -webkit-mask-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC") // this fixes the overflow:hidden in Chrome/Opera
        &, canvas
          width 100%
          height 100%
      .point
        fill #ec6b6d
        stroke #e49290
        stroke-width 0
        cursor pointer
        &:hover
          stroke-width 2px
      .track
        stroke #e49290
        stroke-width 5px
        stroke-linecap round
      .c3-line
        stroke-width 2px
      .c3-tooltip
        td.name
          display none
        td.value
          text-align center


